@model RepoApp.BLL.Models.DetailModels.UserDetailsModel

@{
    Layout = null;
}

<form novalidate id="userDeletePost">
    @Html.HiddenFor(x => x.Id)
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <span style="font-weight:bold">Do you want to delete this user?</span>
            </div>
        </div>

        <br />

        <div class="row">
            <div class="col-sm-2">
                @Html.LabelFor(m => m.Id)
            </div>
            <div class="col-sm-6">
                <span>@Model.Id</span>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2">
                @Html.LabelFor(m => m.UserName)
            </div>
            <div class="col-sm-6">
                <span>@Model.UserName</span>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2">
                @Html.LabelFor(m => m.FullName)
            </div>
            <div class="col-sm-6">
                <span>@Model.FullName</span>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2">
                @Html.LabelFor(m => m.Email)
            </div>
            <div class="col-sm-6">
                <span>@Model.Email</span>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2">
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="col-sm-6">
                <span>@Model.Password</span>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2">
                @Html.LabelFor(m => m.IsConnected)
            </div>
            <div class="col-sm-6">
                @if (!Model.IsConnected)
                {
                    <span class="label label-danger">OFF</span>
                }
                else
                {
                    <span class="label label-success">ON</span>
                }
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2">
                @Html.LabelFor(m => m.Roles)
            </div>
            <div class="col-sm-6">

                @foreach (var role in Model.Roles)
                {
                    <span>@role</span>
                }
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-danger" type="submit">Delete</button>
    </div>
</form>



